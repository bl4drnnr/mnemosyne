{
  "name": "mnemosyne-front",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "format": "prettier --write \"{src,packages}/**/*.ts\" && eslint \"{src,packages}/**/*.ts\" --fix",
    "start:prod": "ng serve --port 8080 --no-live-reload --disable-host-check --configuration production",
    "process-start:prod": "pm2 start npm --name \"mnemosyne-front\" -- run start:prod",
    "restart": "pm2 restart mnemosyne-front"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.3",
    "@angular/common": "^16.2.3",
    "@angular/compiler": "^16.2.3",
    "@angular/core": "^16.2.3",
    "@angular/forms": "^16.2.3",
    "@angular/platform-browser": "^16.2.3",
    "@angular/platform-browser-dynamic": "^16.2.3",
    "@angular/router": "^16.2.3",
    "@ngneat/transloco": "^4.3.0",
    "@ngneat/transloco-persist-lang": "^4.0.0",
    "dayjs": "^1.11.10",
    "file-saver": "^2.0.5",
    "lottie-web": "^5.12.2",
    "ng-image-slider": "^7.0.1",
    "ngx-lottie": "^10.0.0",
    "ngx-typed-js": "^2.1.1",
    "pm2": "^5.3.1",
    "primeng": "^17.12.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.1",
    "@angular/cli": "~16.2.1",
    "@angular/compiler-cli": "^16.2.3",
    "@types/file-saver": "^2.0.5",
    "@types/jasmine": "~4.3.5",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jasmine-core": "~5.1.1",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.0.3",
    "typescript": "~4.9.4"
  }
}
