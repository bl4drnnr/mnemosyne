{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "strictPropertyInitialization": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@components/*": [
        "src/app/components/*",
        "src/app/components/basic-components/*",
        "src/app/components/pages-components/*",
        "src/app/components/layout-components/*",
        "src/app/components/dashboard-components/*"
      ],
      "@pages/*": [
        "src/app/pages/*",
        "src/app/pages/credentials/*",
        "src/app/pages/static/*",
        "src/app/pages/account/*"
      ],
      "@shared/*": [
        "src/app/shared/*",
        "src/app/shared/api/*",
        "src/app/shared/global-components-services/*"
      ],
      "@services/*": [
        "src/app/shared/services/*"
      ],
      "@responses/*": [
        "src/libs/api/responses/auth/*",
        "src/libs/api/responses/mfa/*",
        "src/libs/api/responses/phone/*",
        "src/libs/api/responses/recovery/*",
        "src/libs/api/responses/users/*",
        "src/libs/api/responses/email/*",
        "src/libs/api/responses/company/*"
      ],
      "@payloads/*": [
        "src/libs/api/payloads/auth/*",
        "src/libs/api/payloads/mfa/*",
        "src/libs/api/payloads/phone/*",
        "src/libs/api/payloads/recovery/*",
        "src/libs/api/payloads/users/*",
        "src/libs/api/payloads/email/*",
        "src/libs/api/payloads/company/*"
      ],
      "@env/*": ["src/app/environments/*"],
      "@layouts/*": ["src/app/layouts/*"],
      "@guards/*": ["src/app/guards/*"],
      "@features/*": ["src/app/features/*"],
      "@modules/*": ["src/app/modules/*"],
      "@interceptors/*": ["src/app/interceptors/*"],
      "@interfaces/*": [
        "src/libs/interfaces/components/*",
        "src/libs/interfaces/pages/*",
        "src/libs/interfaces/api/*",
        "src/libs/types/components/*",
        "src/libs/types/api/*",
        "src/libs/interfaces/*",
        "src/libs/api/controllers/*",
        "src/libs/api/endpoints/*",
        "src/libs/api/methods/*",
        "src/libs/api/errors/*"
      ],
      "@directives/*": ["src/app/directives/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
