{
  "name": "mnemosyne-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "process-start:prod": "pm2 start npm --name \"mnemosyne-api\" -- run start:prod",
    "restart": "pm2 restart mnemosyne-api",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "database:dev:undo": "npx sequelize-cli db:seed:undo --seed wipe.js",
    "database:categories": "npx sequelize-cli db:seed --seed categories.js",
    "database:categories:undo": "npx sequelize-cli db:seed:undo --seed categories.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.4",
    "@nestjs/config": "^3.0.1",
    "@nestjs/core": "^10.2.4",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/platform-express": "^10.2.4",
    "@nestjs/sequelize": "^10.0.0",
    "@nestjs/swagger": "^7.1.10",
    "@sendgrid/mail": "^7.7.0",
    "aws-sdk": "^2.1450.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.0.0",
    "nestjs-twilio": "^4.1.1",
    "node-2fa": "^2.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.3.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "uuid": "^9.0.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.17",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.4",
    "@types/bcryptjs": "^2.4.3",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.4",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.3",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "29.6.4",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@shared/(.*)": [
        "<rootDir>/shared/services/$1.ts",
        "<rootDir>/shared/$1.ts"
      ],
      "@models/(.*)": "<rootDir>/models/$1.ts",
      "@pipes/(.*)": "<rootDir>/pipes/$1.ts",
      "@exceptions/(.*)": [
        "<rootDir>/exceptions/$1.ts",
        "<rootDir>/exceptions/user/$1.ts",
        "<rootDir>/exceptions/role/$1.ts",
        "<rootDir>/exceptions/auth/$1.ts",
        "<rootDir>/exceptions/confirmation-hash/$1.ts",
        "<rootDir>/exceptions/security/$1.ts",
        "<rootDir>/exceptions/validation/$1.ts",
        "<rootDir>/exceptions/recovery/$1.ts",
        "<rootDir>/exceptions/company/$1.ts",
        "<rootDir>/exceptions/company-users/$1.ts",
        "<rootDir>/exceptions/company-roles$/1.ts*"
      ],
      "@dto/(.*)": [
        "<rootDir>/dto/$1.ts",
        "<rootDir>/dto/user/requests/$1.ts",
        "<rootDir>/dto/user/responses/$1.ts",
        "<rootDir>/dto/role/responses/$1.ts",
        "<rootDir>/dto/role/requests/$1.ts",
        "<rootDir>/dto/security/requests/$1.ts",
        "<rootDir>/dto/security/responses/$1.ts",
        "<rootDir>/dto/confirmation-hash/requests/$1.ts",
        "<rootDir>/dto/confirmation-hash/responses/$1.ts",
        "<rootDir>/dto/auth/requests/$1.ts",
        "<rootDir>/dto/auth/responses/$1.ts",
        "<rootDir>/dto/recovery/requests/$1.ts",
        "<rootDir>/dto/recovery/responses/$1.ts",
        "<rootDir>/dto/company/requests/$1.ts",
        "<rootDir>/dto/company/responses/$1.ts",
        "<rootDir>/dto/company-users/requests/$1.ts",
        "<rootDir>/dto/company-users/responses/$1.ts",
        "<rootDir>/dto/company-roles/requests/$1.ts",
        "<rootDir>/dto/company-roles/responses/$1.ts*",
        "<rootDir>/dto/products/requests/$1.ts",
        "<rootDir>/dto/products/responses/$1.ts*",
        "<rootDir>/dto/categories/requests/$1.ts",
        "<rootDir>/dto/categories/responses/$1.ts*"
      ],
      "@events/(.*)": "<rootDir>/events/$1.ts",
      "@guards/(.*)": "<rootDir>/guards/$1.ts",
      "@decorators/(.*)": "<rootDir>/decorators/$1.ts",
      "@middlewares/(.*)": "<rootDir>/middlewares/$1.ts",
      "@modules/(.*)": [
        "<rootDir>/modules/users/$1.ts",
        "<rootDir>/modules/roles/$1.ts",
        "<rootDir>/modules/auth/$1.ts",
        "<rootDir>/modules/confirmation-hash/$1.ts",
        "<rootDir>/modules/recovery/$1.ts",
        "<rootDir>/modules/company/$1.ts",
        "<rootDir>/modules/company-users/$1.ts",
        "<rootDir>/modules/company-roles/$1.ts",
        "<rootDir>/modules/security/$1.ts",
        "<rootDir>/modules/categories/$1.ts",
        "<rootDir>/modules/products/$1.ts"
      ],
      "@custom-types/(.*)": [
        "<rootDor>/libs/types/company/$1.ts",
        "<rootDor>/libs/types/roles/$.ts"
      ],
      "@interfaces/(.*)": [
        "<rootDir>/libs/enums/$1.ts",
        "<rootDir>/libs/interfaces/auth/$1.ts",
        "<rootDir>/libs/interfaces/confirmation-hash/$1.ts",
        "<rootDir>/libs/interfaces/email/$1.ts",
        "<rootDir>/libs/interfaces/email/common/$1.ts",
        "<rootDir>/libs/interfaces/email/company/$1.ts",
        "<rootDir>/libs/interfaces/email/private/$1.ts",
        "<rootDir>/libs/interfaces/recovery/$1.ts",
        "<rootDir>/libs/interfaces/security/$1.ts",
        "<rootDir>/libs/interfaces/users/$1.ts",
        "<rootDir>/libs/interfaces/cryptography/$1.ts",
        "<rootDir>/libs/interfaces/phone/$1.ts",
        "<rootDir>/libs/interfaces/time/$1.ts",
        "<rootDir>/libs/interfaces/company/$1.ts",
        "<rootDir>/libs/interfaces/company-users/$1.ts",
        "<rootDir>/libs/interfaces/company-roles/$1.ts",
        "<rootDir>/libs/interfaces/roles/$1.ts*",
        "<rootDir>/libs/interfaces/categories/$1.ts*",
        "<rootDir>/libs/interfaces/products/$1.ts*"
      ],
      "@docs/(.*)": "<rootDir>/libs/docs/$1.ts",
      "@email-templates/(.*)": [
        "<rootDir>/libs/email-templates/$1.ts",
        "<rootDir>/libs/email-templates/security/$1.ts"
      ],
      "@interceptors/(.*)": "<rootDir>/interceptors/$1.ts",
      "@regex/(.*)": "<rootDir>/libs/regex/$1.ts"
    }
  }
}
