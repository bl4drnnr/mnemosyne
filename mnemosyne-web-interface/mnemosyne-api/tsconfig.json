{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@shared/*": ["src/shared/services/*", "src/shared/*"],
      "@models/*": ["src/models/*"],
      "@pipes/*": ["src/pipes/*"],
      "@exceptions/*": [
        "src/exceptions/*",
        "src/exceptions/user/*",
        "src/exceptions/role/*",
        "src/exceptions/auth/*",
        "src/exceptions/confirmation-hash/*",
        "src/exceptions/security/*",
        "src/exceptions/validation/*",
        "src/exceptions/recovery/*",
        "src/exceptions/company/*"
      ],
      "@dto/*": [
        "src/dto/*",
        "src/dto/user/requests/*",
        "src/dto/user/responses/*",
        "src/dto/role/responses/*",
        "src/dto/role/requests/*",
        "src/dto/security/requests/*",
        "src/dto/security/responses/*",
        "src/dto/confirmation-hash/requests/*",
        "src/dto/confirmation-hash/responses/*",
        "src/dto/auth/requests/*",
        "src/dto/auth/responses/*",
        "src/dto/recovery/requests/*",
        "src/dto/recovery/responses/*",
        "src/dto/company/requests/*",
        "src/dto/company/responses/*"
      ],
      "@events/*": ["src/events/*"],
      "@guards/*": ["src/guards/*"],
      "@decorators/*": ["src/decorators/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@modules/*": [
        "src/modules/*",
        "src/modules/users/*",
        "src/modules/roles/*",
        "src/modules/auth/*",
        "src/modules/confirmation-hash/*",
        "src/modules/recovery/*",
        "src/modules/company/*"
      ],
      "@interfaces/*": [
        "src/libs/interfaces/auth/*",
        "src/libs/interfaces/confirmation-hash/*",
        "src/libs/interfaces/email/*",
        "src/libs/interfaces/recovery/*",
        "src/libs/interfaces/security/*",
        "src/libs/interfaces/users/*",
        "src/libs/interfaces/cryptography/*",
        "src/libs/interfaces/phone/*",
        "src/libs/interfaces/time/*",
        "src/libs/types/*",
        "src/libs/interfaces/company/*"
      ],
      "@email-templates/*": [
        "src/libs/email-templates/*",
        "src/libs/email-templates/security/*"
      ],
      "@interceptors/*": ["src/interceptors/*"],
      "@regex/*": ["src/libs/regex/*"]
    }
  }
}
