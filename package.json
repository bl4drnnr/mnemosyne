{
  "name": "mnemosyne",
  "version": "0.0.1",
  "description": "Mnemosyne is the project empowering secure document storage with blockchain technology.",
  "scripts": {
    "api:dev:build": "NODE_ENV=development docker-compose --env-file ./mnemosyne-web-interface/.env.development up --build",
    "api:dev:down": "NODE_ENV=development docker-compose --env-file ./mnemosyne-web-interface/.env.development down",
    "api:dev": "NODE_ENV=development docker-compose --env-file ./mnemosyne-web-interface/.env.development up",
    "api:rmi": "docker rmi mnemosyne-api mnemosyne-api-proxy",
    "front:dev": "npm run start --workspace=mnemosyne-front",
    "front:build": "npm run build --workspace=mnemosyne-front",
    "front:restart": "npm run restart --workspace=mnemosyne-front",
    "front:start:prod": "NODE_ENV=production npm run start:prod --workspace=mnemosyne-front",
    "front:process-start:prod": "NODE_ENV=production npm run process-start:prod --workspace=mnemosyne-front",
    "proxy:build": "npm run build --workspace=mnemosyne-api-proxy",
    "proxy:restart": "npm run restart --workspace=mnemosyne-api-proxy",
    "proxy:start:prod": "NODE_ENV=production npm run start:prod --workspace=mnemosyne-api-proxy",
    "proxy:process-start:prod": "NODE_ENV=production npm run process-start:prod --workspace=mnemosyne-api-proxy",
    "api:build": "npm run build --workspace=mnemosyne-api",
    "api:restart": "npm run restart --workspace=mnemosyne-api",
    "api:start:prod": "NODE_ENV=production npm run start:prod --workspace=mnemosyne-api",
    "api:process-start:prod": "NODE_ENV=production npm run process-start:prod --workspace=mnemosyne-api",
    "database:dev:wipe": "NODE_ENV=development npm run database:dev:undo --workspace=mnemosyne-api",
    "format": "npm run format --workspace=mnemosyne-front; npm run format --workspace=mnemosyne-api-proxy; npm run format --workspace=mnemosyne-api",
    "format:front": "npm run format --workspace=mnemosyne-front",
    "format:api-proxy": "npm run format --workspace=mnemosyne-api-proxy",
    "format:api": "npm run format --workspace=mnemosyne-api",
    "api:test": "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE=1 npm run test --workspace=mnemosyne-api"
  },
  "keywords": [
    "blockchain",
    "btc",
    "bitcoin"
  ],
  "workspaces": [
    "./mnemosyne-web-interface/*"
  ],
  "author": "Mikhail Bahdashych <contact@mikhailbahdashych.me>",
  "license": "MIT"
}
